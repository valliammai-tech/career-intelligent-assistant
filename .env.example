# Copy this file to .env and fill in your values
# No API keys needed — everything runs locally via Ollama

# ── Ollama (local LLM — no cost, no key) ─────────────────────────────────────
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_LLM_MODEL=llama3.2:3b
OLLAMA_EMBED_MODEL=nomic-embed-text

# ── ChromaDB ──────────────────────────────────────────────────────────────────
CHROMA_PERSIST_DIR=./data/chroma_db
CHROMA_RESUME_COLLECTION=resume
CHROMA_JOBS_COLLECTION=jobs

# ── Retrieval ─────────────────────────────────────────────────────────────────
RETRIEVAL_TOP_K=5
RETRIEVAL_MMR_LAMBDA=0.6

# ── LLM generation ────────────────────────────────────────────────────────────
LLM_MAX_TOKENS=800
LLM_TEMPERATURE=0.1

# ── Chunking ──────────────────────────────────────────────────────────────────
CHUNK_SIZE=400
CHUNK_OVERLAP=80
CHUNK_MIN_TOKENS=50

# ── App ───────────────────────────────────────────────────────────────────────
API_HOST=0.0.0.0
API_PORT=8000
UI_PORT=8501
LOG_LEVEL=INFO
